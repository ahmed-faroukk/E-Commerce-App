<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_chat_view"
        android:background="@drawable/ic_round_chat"
        android:backgroundTint="#E1E2E3"
        android:padding="8dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="6dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_chat_text_view"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="hi"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right_chat_view"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_round_chat"
        android:backgroundTint="@color/select"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="6dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_chat_text_view"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>

</RelativeLayout>